<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FabFavoriteStyle">
        <item name="android:layout_marginRight">@dimen/full_margin</item>
        <item name="android:layout_marginBottom">@dimen/quarter_margin</item>
        <item name="android:src">@drawable/ic_star_border_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="FabEdit">
    <item name="android:layout_marginRight">@dimen/full_margin</item>
    <item name="android:layout_marginBottom">@dimen/quarter_margin</item>
    <item name="android:src">@drawable/ic_mode_edit_white_24dp</item>
    <item name="borderWidth">0dp</item>
    <item name="elevation">6dp</item>
    <item name="pressedTranslationZ">12dp</item>
    <item name="rippleColor">@android:color/white</item>
</style>

    <style name="FabMenu">
        <item name="android:layout_marginRight">@dimen/full_margin</item>
        <item name="android:layout_marginBottom">@dimen/quarter_margin</item>
        <!--<item name="android:src">@drawable/ic_menu_white_24dp</item>-->
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/full_margin</item>
        <item name="android:src">@drawable/ic_add_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>



    <style name="appMediumFont" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="appMediumFontBold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="summaryAbv" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="appSmallFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="appSmallFontWhite" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="appSmallBlueBold" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appSmallGray" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="headerBody" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/appGrayTransparent</item>
        <item name="android:tag">sticky-hastransparancy"</item>
    </style>

    <style name="headerTitleFont" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Spinnerappblue" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/appblue_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/appblue_list_selector_holo_light</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:state_selected">@color/app_yellow</item>
    </style>

    <style name="buttonText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_light</item>
    </style>
    <style name="buttonTextSmall" >
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:background">@color/blue_light</item>-->
    </style>

    <style name="headerCardsTitleBody" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">@color/appGrayTransparent</item>
    </style>

    <style name="appXsmallFont" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="captionGrey" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="appLargeFont" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="appLargeFontWhite" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="instructionsTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="directionCircle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CheckBoxappBlue" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/appblue_btn_check_holo_light</item>
    </style>

    <style name="headerTitleBody" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">@color/appGrayTransparent</item>
        <item name="android:tag">sticky-hastransparancy"</item>
    </style>

    <style name="headlineTextWhite" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonOrange" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/app_orange</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="buttonBlue" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/app_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="buttonYellow" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/app_yellow</item>

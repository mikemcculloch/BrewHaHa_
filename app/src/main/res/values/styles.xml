<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="CheckBoxappBlue" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/appblue_btn_check_holo_light</item>
    </style>

    <style name="headerBody" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/appGrayTransparent</item>
        <item name="android:tag">sticky-hastransparancy"</item>
    </style>

    <!--<style name="headerFont.layout" parent="TextAppearance.AppCompat.Medium">-->
        <!--<item name="android:layout_width">match_parent</item>-->
        <!--<item name="android:layout_height">match_parent</item>-->
        <!--<item name="android:gravity">left|center_vertical</item>]-->
    <!--</style>-->

    <style name="headerTitleBody" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">@color/appGrayTransparent</item>
        <item name="android:tag">sticky-hastransparancy"</item>
    </style>


    <style name="instructionsTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="summaryAbv" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/app_blue</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>
    <style name="headerTitleFont" parent="TextAppearance.AppCompat.Medium">
        <!--<item name="android:textColor">@color/app_orange</item>-->
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <!--<style name="headerSubFont" parent="TextAppearance.AppCompat.Small">-->
        <!--<item name="android:textColor">@color/app_blue</item>-->
    <!--</style>-->

    <style name="whiteFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="appOrangeFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/app_orange</item>
    </style>

    <style name="appSmallFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="appXsmallFont" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="appMediumFont" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="appLargeFont" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bodyPadding">
        <item name="android:paddingLeft">@dimen/quarter_margin</item>
        <item name="android:paddingRight">@dimen/quarter_margin</item>
    </style>

    <style name="bodyPaddingLarge">
        <item name="android:paddingLeft">@dimen/full_margin</item>
        <item name="android:paddingRight">@dimen/full_margin</item>
    </style>

    <style name="bodyPaddingAll">
        <item name="android:padding">@dimen/quarter_margin</item>
    </style>

    <style name="bodyMarginAll">
        <item name="android:layout_margin">@dimen/quarter_margin</item>
    </style>

    <style name="bodyMarginCard">
        <item name="android:layout_marginTop">@dimen/quarter_margin</item>
        <item name="android:layout_marginLeft">@dimen/quarter_margin</item>
        <item name="android:layout_marginRight">@dimen/quarter_margin</item>
    </style>

    <style name="Spinnerappblue" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/appblue_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/appblue_list_selector_holo_light</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:state_selected">@color/app_yellow</item>
    </style>

    <!--//NEW 8/22-->
    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="elevation">0dp</item>-->
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/full_margin</item>
        <item name="android:src">@mipmap/ic_add_white_48dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="FabFavoriteStyle">
        <item name="android:layout_marginRight">@dimen/full_margin</item>
        <item name="android:layout_marginBottom">@dimen/quarter_margin</item>
        <item name="android:src">@mipmap/ic_star_border_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="buttonText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_light</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/blue_light</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/drag_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="@dimen/quarter_margin"
                android:layout_marginTop="@dimen/quarter_margin"
                android:layout_marginLeft="@dimen/quarter_margin">

                <TextView
                    android:id="@+id/position"
                    style="@style/directionCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_circle_primary"
                    android:gravity="center"
                    android:padding="@dimen/quarter_margin"
                    android:text="1" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/direction_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_instruction_text_text_view"
                    style="@style/appSmallFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="this is my example text and should not be viewed by anyone execpt my stupid cat. Luckly hes licking his balls at the moment and does not see this." />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

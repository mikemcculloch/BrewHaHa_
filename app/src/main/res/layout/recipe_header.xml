<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:plus="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:drawSelectorOnTop="true"
    android:orientation="vertical"
    android:transitionName="@string/transition_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/parent_layout"
        style="@style/CardViewStyle.Light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:elevation="10dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/quarter_margin"
            android:layout_marginLeft="@dimen/full_margin"
            android:layout_marginRight="@dimen/full_margin"
            android:layout_marginTop="@dimen/quarter_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/quarter_margin"
                android:layout_marginRight="@dimen/quarter_margin"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/author_image_view"
                    android:layout_width="@dimen/image_large_circle_user"
                    android:layout_height="@dimen/image_large_circle_user"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/author_image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_person_black_24dp"
                    android:transitionName="@string/transition_bitmapuser" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recipe_style_text_view"
                        style="@style/appSmallFontWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Indian Pale Ale"
                        android:transitionName="@string/transition_style" />

                    <TextView
                        android:id="@+id/recipe_date_created_text_view"
                        style="@style/appSmallFontWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="12/12/2015"
                        android:transitionName="@string/transition_dateCreated" />
                </LinearLayout>

                <TextView
                    android:id="@+id/recipe_title_text_view"
                    style="@style/appMediumFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Trump Dump hump bump jump lump vump womp slump "
                    android:transitionName="@string/transition_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.gms.plus.PlusOneButton
                        android:id="@+id/plus_one_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:transitionName="@string/transition_googlePlus"
                        plus:annotation="inline"
                        plus:size="standard" />

                    <TextView
                        android:id="@+id/recipe_author_text_view"
                        style="@style/appSmallFontWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="wooanaz"
                        android:transitionName="@string/transition_author" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--<ImageView-->
        <!--android:id="@+id/home_row_user_image_view"-->
        <!--android:layout_width="@dimen/image_small_circle"-->
        <!--android:layout_height="@dimen/image_small_circle"-->
        <!--android:background="@android:color/transparent"-->
        <!--android:scaleType="fitCenter"-->
        <!--android:src="@drawable/ic_person_black_24dp"-->
        <!--android:visibility="gone" />-->

    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/half_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_margin"
        card_view:cardBackgroundColor="@color/app_orange"
        card_view:cardCornerRadius="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginStart="@dimen/half_margin"
            android:contentDescription="@string/string_details_icon"
            android:src="@drawable/ic_details_black_24px" />

        <TextView
            style="@style/headlineTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="@dimen/quarter_margin"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginStart="@dimen/quarter_margin"
            android:layout_marginTop="@dimen/quarter_margin"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/string_overview" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_blue"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipe_title_text_view"
                    style="@style/appLargeFontWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginRight="@dimen/half_margin"
                    android:maxLines="2"
                    android:text="Recipe Title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/quarter_margin"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_marginRight="@dimen/half_margin"
                android:layout_marginTop="@dimen/quarter_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipe_description_text_view"
                    style="@style/appMediumFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/quarter_margin"
                    android:layout_marginRight="@dimen/quarter_margin"
                    android:gravity="start"
                    android:text="@string/string_placeholder" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/app_blue"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="@dimen/quarter_margin"
                    android:layout_marginStart="@dimen/quarter_margin"
                    android:layout_weight="1"
                    android:text="@string/string_alcohol_by_volume"
                    android:textAppearance="@style/appLargeFontWhite" />

                <TextView
                    android:id="@+id/abv_text_view"
                    style="@style/appLargeFontWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/quarter_margin"
                    android:layout_marginRight="@dimen/quarter_margin"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="7%" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_margin"
                android:layout_marginLeft="@dimen/quarter_margin"
                android:layout_marginRight="@dimen/quarter_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_original_gravity" />

                    <TextView
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_final_gravity" />

                    <TextView
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_bitterness_ibu" />

                    <TextView
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_srm_color" />

                    <TextView
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_makes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/original_gravity_text_view"
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <TextView
                        android:id="@+id/final_gravity_text_view"
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <TextView
                        android:id="@+id/bitterness_text_view"
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/circle_srm_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/half_margin"
                            android:layout_marginRight="@dimen/half_margin"
                            android:src="@drawable/circle_srm" />

                        <TextView
                            android:id="@+id/srm_color_text_view"
                            style="@style/appMediumFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/yield_by_gallon_text_view"
                        style="@style/appMediumFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Gallons" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/app_blue"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="@dimen/quarter_margin"
                    android:layout_marginStart="@dimen/quarter_margin"
                    android:layout_weight="1"
                    android:text="@string/title_comments"
                    android:textAppearance="@style/appLargeFontWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/quarter_margin"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_marginRight="@dimen/half_margin"
                android:layout_marginTop="@dimen/quarter_margin"
                android:background="@color/white"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/recipe_comment_edit_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"

                        android:autoLink="all"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="start"
                        android:hint="@string/text_post_a_comment"
                        android:inputType="text|textMultiLine"
                        android:maxLength="200"
                        android:maxLines="10"
                        android:singleLine="false" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="4"
                    android:animateLayoutChanges="true"
                    android:gravity="end|center_vertical"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/send_comment_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_send_inactive">

                        <ImageView
                            android:id="@+id/send_drawable"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_send_white_24dp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comments_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_margin"
                android:layout_marginTop="@dimen/half_margin" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

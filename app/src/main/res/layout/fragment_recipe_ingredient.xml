<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/quarter_margin"
    android:layout_marginRight="@dimen/quarter_margin"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/half_margin"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:drawableLeft="@drawable/ic_shopping_basket_black_24px"
            android:elevation="12dp"
            android:text="@string/title_ingredients"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:theme="@style/buttonBlue" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/headerBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:background="@color/app_orange"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/quarter_margin"
            android:paddingTop="@dimen/quarter_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="@dimen/quarter_margin"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/text_grains"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recipe_grain_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/full_margin"
            android:layout_marginRight="@dimen/full_margin"
            android:layout_marginBottom="@dimen/quarter_margin"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/headerBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:background="@color/app_orange"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/quarter_margin"
            android:paddingTop="@dimen/quarter_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="@dimen/quarter_margin"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/text_hops"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recipe_hop_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/full_margin"
            android:layout_marginRight="@dimen/full_margin"
            android:layout_marginBottom="@dimen/quarter_margin"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/headerBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:background="@color/app_orange"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/quarter_margin"
            android:paddingTop="@dimen/quarter_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="@dimen/quarter_margin"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/text_yeast"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recipe_yeast_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/full_margin"
            android:layout_marginRight="@dimen/full_margin" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
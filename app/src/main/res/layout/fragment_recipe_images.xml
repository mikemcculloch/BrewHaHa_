<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_orange"
    android:orientation="vertical"
    android:paddingBottom="@dimen/half_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_margin"
        card_view:cardBackgroundColor="@color/app_blue"
        card_view:cardCornerRadius="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/half_margin"
            android:src="@drawable/ic_crop_original_white_24dp" />

        <TextView
            style="@style/headlineTextWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="@dimen/quarter_margin"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginTop="@dimen/quarter_margin"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/string_images" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/recipe_image_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.viewpagerindicator.LinePageIndicator
            android:id="@+id/view_page_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" />

    </LinearLayout>
</LinearLayout>
